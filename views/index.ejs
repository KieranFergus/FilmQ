    <style>
      * {
        margin: 0px;
      }
      body {
        background: linear-gradient(to top, black, rgb(255, 133, 153));
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
      }

      header {
        background-color: rgba(0, 0, 0, 0.4);
        background-blend-mode: multiply;
        color: #fff;
        text-align: center;
        position: fixed;
        top: 0;
        z-index: 1;
        width: 100vw;
        height: 10%;
      }

      .center-item {
        display: inline-block;
      }

      .left-item,
      .right-item {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
      }

      .left-item {
        left: 15px;
      }
      #search {
        color: red;
        width: 400px;
      }

      .right-item {
        right: 15px;
      }

      .random-big {
